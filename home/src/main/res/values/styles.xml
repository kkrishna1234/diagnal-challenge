<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MovieTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/titillium_web_extra_light</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="fontFamily">@font/titillium_web_light</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/titillium_web_light</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:background">@null</item>
    </style>
</resources>
